@model Avocado.Web.Models.Collections.MyCollectionsViewModel

@{
    ViewBag.Title = "Creativime";
    var _imagePath = System.Configuration.ConfigurationManager.AppSettings["AzureStorageUri"];
}

@section Head{
    <script src="@Url.Content("~/Scripts/bootstrap-twipsy.js")" type="text/javascript"></script>
}

@section Scripts{
    <script type="text/javascript">
        $('.collection-set img').twipsy();
    </script>
}

<div class="container">
    <div class="row">
        <div class="span16">
            @Html.Partial("_TabNavigation")
        </div>
    </div>
    <div class="row">
        <div class="span12">
            <h1>All your favorites in one spot</h1>
            <div class="row-below collection-set">
                <h3>My Saves (@Model.MySaves.Count())</h3>
                @foreach (var post in Model.MySaves)
                {
                    <a href="/Browse/Category/@post.Category.Name/@post.PostId"><img title="@post.Title" src="@_imagePath/@post.Account.UserName.ToLower()/small/@post.MainImage" alt="post image" width="100" height="75" /></a>
                }
            </div>
            <hr />
            <div class="row-below collection-set">
                <h3>My Creations (@Model.MyCreations.Count())</h3>
                @foreach (var post in Model.MyCreations)
                {
                    <a href="/Browse/Category/@post.Category.Name/@post.PostId"><img title="@post.Title" src="@_imagePath/@post.Account.UserName.ToLower()/small/@post.MainImage" alt="post image" width="100" height="75" /></a>
                }
            </div>
            <hr />
            <div class="row-below collection-set">
                <h3>My Likes (@Model.MyLikes.Count())</h3>
                @foreach (var post in Model.MyLikes)
                {
                    <a href="/Browse/Category/@post.Category.Name/@post.PostId"><img title="@post.Title" src="@_imagePath/@post.Account.UserName.ToLower()/small/@post.MainImage" alt="post image" width="100" height="75" /></a>
                }
            </div>
        </div>
        <div class="span4">
            @Html.Partial("_PostButton")
        </div>
    </div>
</div>

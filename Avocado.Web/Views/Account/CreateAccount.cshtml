    $(function () {
        $('#UserName').blur(function () {
            if ($("#UserName").val()) {
                $.post("/Account/CheckUserNameAvailability", { userName: $("#UserName").val() },
                    function (data) {
                        var myObject = eval('(' + data + ')');
                        var newid = myObject;
                        if (newid == 0) {
                            $("#availabilityMessage").html("<span style='color:green;'>username available :-D</span>")
                        }
                        else {
                            $("#UserName").addClass('input-validation-error');
                            $("#availabilityMessage").html("<span style='color:red;'>username taken :-(</span>");
                        }
                    });
            }

        });
    });
    
</script>

<div class="container">
    <h1>
        Join Creativime
    </h1>
        
    <h4>It's free! Join now and start sharing your creativity.</h4>

    @using (Html.BeginForm("CreateAccount", "Account", new { social = @Request.QueryString["social"], @at = @Request.QueryString["at"], @as = @Request.QueryString["as"] }, FormMethod.Post, new { autocomplete = "off" }))
    { 
        @Html.ValidationSummary(excludePropertyErrors: false, message: "", htmlAttributes: new { @class = "" })

        @Html.TextBoxFor(x => x.UserName, new { @class = "form-input", placeholder = "username" })
        <span id="availabilityMessage"></span>
        <br /><br />
        
        @Html.TextBoxFor(x => x.Email, new { @class = "form-input", id = "EmailAddress", placeholder = "email" })
        
        <br /><br />
        
        
        @Html.PasswordFor(x => x.Password, new { @class = "form-input", placeholder = "password" })
        
        <br /><br />
        
        <div>
            <input type="submit" class="btn primary large" value="Join Creativime!" />
        </div>
    }
</div>

